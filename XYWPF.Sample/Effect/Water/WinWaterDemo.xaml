<Window x:Class="XYWPF.Sample.Effect.Water.WinWaterDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XYWPF.Sample.Effect.Water"
        mc:Ignorable="d"
        Title="水面波纹特效" Height="450" Width="800">
    <Grid x:Name="back" ClipToBounds="True">
        <Grid.Background>
            <RadialGradientBrush GradientOrigin="0.5,0" Center="0.5,0">
                <GradientStop Color="#F4F7FC" Offset="-1"></GradientStop>
                <GradientStop Color="#4F6E8B" Offset="1"></GradientStop>
            </RadialGradientBrush>
        </Grid.Background>
    </Grid>
</Window>
