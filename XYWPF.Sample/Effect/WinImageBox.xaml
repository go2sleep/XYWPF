<Window x:Class="XYWPF.Sample.Effect.WinImageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XYWPF.Sample.Effect"
        mc:Ignorable="d"
        Title="WinImageBox" Height="450" Width="800">
    <Grid x:Name="mainGrid" Background="AntiqueWhite">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="VerticalityGrid" Width="1*"></ColumnDefinition>
            <ColumnDefinition x:Name="HorizontalGrid" Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <local:MyCanvas x:Name="VerticalityCanvas" Grid.Column="0" Direction="1" ImageCount="8" Width="200" Height="400"></local:MyCanvas>
        <local:MyCanvas x:Name="HorizontalCanvas" Grid.Column="1" Direction="0" ImageCount="8" Width="400" Height="200"></local:MyCanvas>
    </Grid>
</Window>
