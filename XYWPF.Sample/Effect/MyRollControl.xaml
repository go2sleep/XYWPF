<UserControl x:Class="XYWPF.Sample.Effect.MyRollControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XYWPF.Sample.Effect"
             mc:Ignorable="d">
    <Canvas x:Name="mainGrid" MouseDown="mainGrid_MouseDown">
        <local:MyImageControl x:Name="controlBack" Canvas.Left="5" Canvas.Top="5" />
        <local:MyImageControl x:Name="controlFront" Canvas.Left="5" Canvas.Top="5"/>
    </Canvas>
</UserControl>
