<Window x:Class="XYWPF.Sample.BrushDemo.WinBrush"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XYWPF.Sample.BrushDemo"
        mc:Ignorable="d"
        Title="画刷特效" Height="450" Width="800" Background="#FF2C2929">
    <Grid>
        <Border BorderThickness="1" Margin="50,34,526,348">
            <Border.BorderBrush>
                <local:RevealBorderBrush />
            </Border.BorderBrush>
        </Border>
        <Border BorderThickness="1" Margin="50,76,526,306">
            <Border.BorderBrush>
                <local:RevealBorderBrush Color="White" FallbackColor="Gray" />
            </Border.BorderBrush>
        </Border>
    </Grid>
</Window>
